</div>

<script>
    function hehe()
    {
        var str='<button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle">&nbsp;&nbsp;POST</i></button><button type="submit" class="btn btn-success" disabled><i class="fas fa-dollar-sign">&nbsp;&nbsp;PAY</i></button>';
        document.getElementsByClassName('iot')[0].innerHTML = str;
        window.alert('  Trả tiền thành công!');
    }
    function haha()
    {
        var str = document.getElementsByClassName('iot').innerHTML;
        if (str == '<button type="submit" class="btn btn-primary"><i class="fas fa-plus-circle">&nbsp;&nbsp;POST</i></button><button type="submit" class="btn btn-success" disabled><i class="fas fa-dollar-sign">&nbsp;&nbsp;PAY</i></button>')
        {
            alert('  Đăng bài thành công!');
        }
        else 
        {
            alert('  Bạn chưa trả tiền để đăng bài!');
        }
    }
</script>